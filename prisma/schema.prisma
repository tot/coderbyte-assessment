generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Post {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    author    String
    title     String
    content   String
    slug      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index(fields: [title, content, slug])
}
